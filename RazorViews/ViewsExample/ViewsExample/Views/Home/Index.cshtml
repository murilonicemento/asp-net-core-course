@using ViewsExample.Models;
@{
    string appTitle = "Aps.Net Core Demo App";
    Person person = new Person() { Name = "John", DateOfBirth = Convert.ToDateTime("2000-07-01") };
}
<!DOCTYPE html>

<html lang="pt-br">
<head>
    <title>@appTitle</title>
    <meta charset="UTF-8"/>
</head>
<body>
<h1>Welcome</h1>
<h2>Hello @person.Name</h2>

@{
    double age = Math.Round((DateTime.Now - person.DateOfBirth).TotalDays / 365.25);
}

<h3>@age years old</h3>

</body>
</html>